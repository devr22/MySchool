<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bar_bg"
    tools:context=".activities.DashBoardActivity">

    <include layout="@layout/collapsing_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dashboard_layout_bg"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_30"
            android:orientation="vertical"
            android:padding="@dimen/padding_large">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/dashboard_avlSubject_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:paddingHorizontal="@dimen/padding_small"
                android:paddingVertical="@dimen/padding_xlarge"
                android:text="@string/available_subjects"
                android:textSize="@dimen/text_26"
                app:drawableEndCompat="@drawable/ic_arrow_forward" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/dashboard_enrolledSubject_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:paddingHorizontal="@dimen/padding_small"
                android:paddingVertical="@dimen/padding_xlarge"
                android:text="@string/enrolled_subjects"
                android:textSize="@dimen/text_26"
                app:drawableEndCompat="@drawable/ic_arrow_forward" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/dashboard_assignment_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:paddingHorizontal="@dimen/padding_small"
                android:paddingVertical="@dimen/padding_xlarge"
                android:text="@string/assignment"
                android:textSize="@dimen/text_26"
                app:drawableEndCompat="@drawable/ic_arrow_forward" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/dashboard_test_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:paddingHorizontal="@dimen/padding_small"
                android:paddingVertical="@dimen/padding_xlarge"
                android:text="@string/quiz_test"
                android:textSize="@dimen/text_26"
                app:drawableEndCompat="@drawable/ic_arrow_forward" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/dashboard_calendar_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:paddingHorizontal="@dimen/padding_small"
                android:paddingVertical="@dimen/padding_xlarge"
                android:text="@string/calendar"
                android:textSize="@dimen/text_26"
                app:drawableEndCompat="@drawable/ic_arrow_forward" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/dashboard_logout_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@android:color/holo_red_light"
                android:paddingHorizontal="@dimen/padding_small"
                android:paddingVertical="@dimen/padding_xlarge"
                android:text="@string/logout"
                android:textSize="@dimen/text_26" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>